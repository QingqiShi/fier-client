{
  "name": "fier-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint --ext js,ts,tsx --ignore-pattern json src",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "commit": "npx git-cz",
    "format": "prettier --single-quote --write src/**/*.{js,ts,tsx}",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.0",
    "@material-ui/icons": "^4.5.1",
    "firebase": "^7.8.2",
    "fitty": "^2.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet-async": "^1.0.4",
    "react-lit-store": "^1.2.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-spring": "^8.0.27",
    "react-use-gesture": "^7.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/react": "^16.9.21",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "husky": "^4.2.3",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "raf-stub": "^3.0.0",
    "react-test-renderer": "^16.12.0",
    "source-map-explorer": "^2.3.0",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm test -- --watchAll=false --runInBand && npm run build"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx src --fix",
      "prettier --single-quote --write",
      "git add"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/testUtils.tsx",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/*.d.ts",
      "!<rootDir>/src/serviceWorker.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "unit tests",
    "outputDirectory": "./coverage/unit/",
    "outputName": "result.xml"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": true,
          "shorthandLast": true,
          "reservedFirst": true,
          "ignoreCase": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "proxy": "https://fier-app.web.app"
}
