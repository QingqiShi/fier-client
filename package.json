{
  "name": "fier-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom-sixteen",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "commit": "git-cz",
    "format": "prettier --single-quote --write \"src/**/*.{js,ts,tsx}\"",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.53",
    "@material-ui/pickers": "^4.0.0-alpha.7",
    "@react-spring/web": "^9.0.0-beta.34",
    "dayjs": "^1.8.26",
    "emoji-regex": "^9.0.0",
    "firebase": "^7.14.4",
    "fitty": "^2.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.6",
    "react-lit-store": "^1.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-use-gesture": "^7.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@react-spring/mock-raf": "^1.1.1",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/classnames": "^2.2.9",
    "@types/emoji-regex": "^8.0.0",
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "husky": "^4.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "source-map-explorer": "^2.4.2",
    "typescript": "^3.9.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx src --fix",
      "prettier --single-quote --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/testUtils.tsx",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/*.d.ts",
      "!<rootDir>/src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "unit tests",
    "outputDirectory": "./coverage/unit/",
    "outputName": "result.xml"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": true,
          "shorthandLast": true,
          "reservedFirst": true,
          "ignoreCase": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "proxy": "https://fier-app.web.app"
}
